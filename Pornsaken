-- âœ… ANGEL HUB (Rayfield GUI Based) -- Works on HTTP-enabled executors only (e.g., Synapse X, Krnl, Hydrogen)

local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({ Name = "ANGEL HUB", LoadingTitle = "ANGEL HUB", LoadingSubtitle = "By ChatGPT", ConfigurationSaving = { Enabled = false, }, })

local Main = Window:CreateTab("Main") local ESP = Window:CreateTab("ESP")

local autoBlockRange = 15 local autoPunchRange = 10 local plr = game.Players.LocalPlayer

Main:CreateSlider({ Name = "Auto Block Distance", Range = {0, 25}, Increment = 1, CurrentValue = autoBlockRange, Callback = function(v) autoBlockRange = v end })

Main:CreateSlider({ Name = "Auto Punch Distance", Range = {0, 25}, Increment = 1, CurrentValue = autoPunchRange, Callback = function(v) autoPunchRange = v end })

Main:CreateToggle({ Name = "Auto Block (Guest 1337)", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(0.0001) do if plr.Name ~= "Guest 1337" then continue end local char = plr.Character if not char then continue end local tool = char:FindFirstChildOfClass("Tool") if tool and tool:FindFirstChild("RemoteEvent") then for _, p in pairs(game.Players:GetPlayers()) do if p ~= plr and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then local t = p.Character:FindFirstChildOfClass("Tool") if t and table.find({"slash","punch","gashing wound","behead","walkspeed override","stab","void rush"}, t.Name:lower()) then if (p.Character.HumanoidRootPart.Position - char.HumanoidRootPart.Position).Magnitude <= autoBlockRange then tool.RemoteEvent:FireServer() end end end end end end end) end })

Main:CreateToggle({ Name = "Auto Punch", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(0.0001) do local char = plr.Character if not char then continue end local tool = char:FindFirstChildOfClass("Tool") if tool then tool:Activate() end end end) end })

Main:CreateToggle({ Name = "Infinite Stamina", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(0.1) do local s = plr.Character and plr.Character:FindFirstChild("Stamina") if s then s.Value = s.MaxValue or 100 end end end) end })

Main:CreateToggle({ Name = "Auto Solve Generator", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(2) do for _, g in pairs(workspace:GetDescendants()) do if g.Name:lower():find("puzzle") and g:FindFirstChild("RemoteEvent") then g.RemoteEvent:FireServer() end end end end) end })

function highlight(obj, color) if not obj:FindFirstChild("Highlight") then local h = Instance.new("Highlight") h.FillColor = color h.OutlineColor = Color3.new(1,1,1) h.FillTransparency = 0.3 h.OutlineTransparency = 0.5 h.Adornee = obj h.Parent = obj task.delay(5, function() h:Destroy() end) end end

local killers = {"Jason","Noli","John Doe","1x1x1x1","coolkid"} local survivors = {"Guest 1337","007n7","Two Time","Chance","Builderman","Noob","Elliot","Dusekkar"}

ESP:CreateToggle({ Name = "Killer ESP", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(0.5) do for _, p in pairs(game.Players:GetPlayers()) do if p ~= plr and p.Character and table.find(killers, p.Name) then highlight(p.Character, Color3.new(1, 0, 0)) end end end end) end })

ESP:CreateToggle({ Name = "Survivor ESP", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(0.5) do for _, p in pairs(game.Players:GetPlayers()) do if p ~= plr and p.Character and table.find(survivors, p.Name) then highlight(p.Character, Color3.new(0, 1, 0)) end end end end) end })

ESP:CreateToggle({ Name = "Generator ESP", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(1) do for _, obj in pairs(workspace:GetDescendants()) do if obj:IsA("BasePart") and obj.Name:lower():find("generator") then highlight(obj, Color3.new(1, 1, 0)) end end end end) end })

ESP:CreateToggle({ Name = "Item ESP", CurrentValue = false, Callback = function(state) task.spawn(function() while state and task.wait(1) do for _, obj in pairs(workspace:GetDescendants()) do if obj:IsA("BasePart") and (obj.Name:lower():find("cola") or obj.Name:lower():find("medkit")) then highlight(obj, Color3.new(0.5, 0.5, 1)) end end end end) end })

    end

    if espEnabled.survivor then
        for _, plr in pairs(Players:GetPlayers()) do
            if plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                -- Assuming survivors are players without IsKiller true
                if not (plr:FindFirstChild("IsKiller") and plr.IsKiller.Value == true) then
                    espForObject(plr.Character.HumanoidRootPart, Color3.new(0, 1, 0)) -- green
                end
            end
        end
    end

    if espEnabled.generator then
        -- Find generators in workspace (adjust path to actual generators)
        for _, gen in pairs(workspace:GetChildren()) do
            if gen.Name == "Generator" and gen:IsA("BasePart") then
                espForObject(gen, Color3.new(1, 1, 0)) -- yellow
            end
        end
    end

    if espEnabled.item then
        -- Find items in workspace (adjust path)
        for _, item in pairs(workspace:GetChildren()) do
            if item.Name == "Item" and item:IsA("BasePart") then
                espForObject(item, Color3.new(0, 0, 1)) -- blue
            end
        end
    end
end)

print("Forsaken Helper loaded! Use the GUI to toggle features.")
